<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/h1"
            android:layout_alignParentLeft="true"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/h11"
                android:background="#9036A9"
                />

            <View
                android:id="@+id/h11"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/h11"
                android:background="#ED76AF"
                />

        </RelativeLayout>


        <View
            android:id="@+id/h1"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/h1"
            android:background="#ED76AF"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@id/rl1"
        >

        <View
            android:id="@+id/v21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/v22"
            android:background="#F5CB6B"
            />

        <View
            android:id="@+id/v22"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/v22"
            android:layout_alignParentRight="true"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/rl5"
                android:background="#D3EDD7"
                />

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/v23"
                    android:background="#D3EDD7"
                    />

                <View
                    android:id="@+id/v23"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v23"
                    android:background="#4053AE"
                    />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/rl5"
                android:background="#D3EDD7"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@id/rl2"
        >

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/h3"
            android:background="#82F44E"
            />

        <View
            android:id="@+id/h3"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/h3"
            android:layout_alignParentRight="true"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/h33"
                android:background="#82F44E"
                />

            <View
                android:id="@+id/h33"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/h33"
                android:background="#CFF77F"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@id/rl3"
        >

        <View
            android:id="@+id/cv1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#F5CB6B"
            android:layout_alignParentLeft="true"
            />

        <RelativeLayout
            android:id="@+id/cv2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/cv1"
            android:background="#9036A9"
            >

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="#ED76AF"
                />

        </RelativeLayout>

        <View
            android:id="@+id/cv3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#ED76AF"
            android:layout_toEndOf="@id/cv2"
            />

        <View
            android:id="@+id/cv4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#F5CB6B"
            android:layout_toEndOf="@id/cv3"
            />

        <View
            android:id="@+id/cv5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#8CCAC5"
            android:layout_toEndOf="@id/cv4"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


</RelativeLayout>