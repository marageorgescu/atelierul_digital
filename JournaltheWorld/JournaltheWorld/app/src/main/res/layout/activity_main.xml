<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainActivityTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:text="Journal the World"
        android:gravity="center"
        android:fontFamily="@font/sweetandsassy"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#6B6361"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />

    <Button
        android:id="@+id/mainActivityStartJournalingButton"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Start Journaling"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/sweetandsassy"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <Button
        android:id="@+id/mainActivityMyEntireJournalButton"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="My Travel Journal"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/sweetandsassy"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        />

</LinearLayout>