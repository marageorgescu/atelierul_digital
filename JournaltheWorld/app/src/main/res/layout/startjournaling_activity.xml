<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <EditText
        android:id="@+id/startJournalingActivityTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:hint="Enter Title Here"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sweetandsassy"
        android:textColor="#6B6361"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/startJournalingActivityImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />

        <Button
            android:id="@+id/startJournalingActivityGalleryButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:text="Gallery"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/sweetandsassy"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            />

        <Button
            android:id="@+id/startJournalingActivityCameraButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:text="Camera"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/sweetandsassy"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/startJournalingActivityDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_margin="20dp"
        android:hint="Enter Date"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sweetandsassy"
        android:textColor="#6B6361"
        android:textSize="30dp"
        android:textStyle="bold"
        android:clickable="true"
        />

    <EditText
        android:id="@+id/startJournalingActivityLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint=" Enter Location"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sweetandsassy"
        android:textColor="#6B6361"
        android:textSize="30dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/location50"
        />

    <EditText
        android:id="@+id/startJournalingActivityStoryView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:hint="Write your story here..."
        android:layout_margin="20dp"
        android:gravity="top"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sweetandsassy"
        android:textStyle="bold"
        android:textColor="#6B6361"
        android:textSize="20dp"
        />




</LinearLayout>